			"style": {
				"navigationBarTitleText": "长院二手淘",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/fabu/fabu/fabu",
			"style": {
				"navigationBarTitleText": "发布商品"
			}
		},
		{
			"path": "pages/fabu/qiugou/qiuguo",
			"style": {
				"navigationBarTitleText": "意向求购"
			}
		},
		{
			"path": "pages/goods/good-info/good-info",
			"style": {
				"navigationBarTitleText": "商品详情",
				"enablePullDownRefresh": true
