	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/home/home",
	        "iconPath": "static/icon/home.png",
	        "selectedIconPath": "static/icon/home_.png",
	        "text": "首页"
	    },{
			"pagePath":"pages/fabu/fabu/fabu",
			"iconPath":"static/icon/fabu.png",
			"selectedIconPath":"static/icon/fabu_.png",
